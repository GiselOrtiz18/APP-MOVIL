<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".fragmentos.Instructivos"
    tools:layout_editor_absoluteX="-10dp"
    tools:layout_editor_absoluteY="-134dp">

    <ImageButton
        android:id="@+id/img_anexo"
        android:layout_width="101dp"
        android:layout_height="72dp"

        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorBlanco"
        android:src="@drawable/anexos"
        android:textAlignment="center"
        android:transitionName="@string/anexo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_titulo_anexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Anexo 1"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_anexo"
        app:layout_constraintStart_toStartOf="@+id/img_anexo"
        app:layout_constraintTop_toBottomOf="@+id/img_anexo" />

</androidx.constraintlayout.widget.ConstraintLayout>